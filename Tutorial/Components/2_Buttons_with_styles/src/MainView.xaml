<?xml version="1.0" encoding="UTF-8" ?>
<View x:Class="ButtonsStyleTutorial.MainView"
  xmlns="http://tizen.org/Tizen.NUI/2018/XAML"
  xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
  xmlns:c="clr-namespace:Tizen.NUI.Components;assembly=Tizen.NUI.Components"
  BackgroundColor="White"
  WidthSpecification="{Static LayoutParamPolicies.MatchParent}"
  HeightSpecification="{Static LayoutParamPolicies.MatchParent}" >

  <View.Layout>
    <LinearLayout LinearOrientation="Horizontal"/>
  </View.Layout>
  
  <View
    WidthSpecification="{Static LayoutParamPolicies.MatchParent}"
    HeightSpecification="{Static LayoutParamPolicies.MatchParent}">

    <View.Layout>
      <LinearLayout LinearOrientation="Vertical" CellPadding="0, 10"/>
    </View.Layout>

    <c:Button StyleName="ButtonStyle1" Text="Button1" />
    <c:Button StyleName="ButtonStyle2" Text="Button2" />
    <c:Button StyleName="ButtonStyle3" Text="Button3" />
    <c:Button StyleName="ButtonStyle4" Text="Button4" />

    <View>
      <View.Layout>
        <LinearLayout LinearOrientation="Vertical" CellPadding="0, 10"/>
      </View.Layout>
      <c:CheckBox StyleName="ButtonStyle5" Text="Check1" IsSelected="True" />
      <c:CheckBox StyleName="ButtonStyle5" Text="Check2" />
      <c:CheckBox StyleName="ButtonStyle5" Text="Check3" />
    </View>

  </View>
</View>
